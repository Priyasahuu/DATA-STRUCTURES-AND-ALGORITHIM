class Solution {
public:
    int hIndex(vector<int>& citations) {
       int n = citations.size();
       int maxi=1;
       for( int i =  0 ; i < n ; i++){
          int a= n-i;
          if( a<=1&& citations[i]==0)return 0;
          if( citations[i]>=a){
            maxi= max( maxi , a);
          }
       } 
       return maxi;
    }
};
