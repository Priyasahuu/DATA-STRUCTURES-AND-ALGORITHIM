class Solution {
public:
    int dominantIndex(vector<int>& nums) {
        
       
         int n = nums.size();
          int lar= INT_MIN;
          int ind=0;
          for( int i = 0 ;i < n ; i ++){
            if( nums[i]> lar){
                lar= nums[i];
                ind=i;
            }
          }
          for( int i=0 ; i < n;  i++){
            if( i==ind )continue;
            if((2* nums[i]) > lar)return-1;
          }
          return ind;
    }
};
