class Solution {
public:
vector<vector<int>> ans;
int n ;
    void f(vector<int>& candidates , int target , int idx , vector<int>&arr){
    
            if(target==0){
                ans.push_back(arr);
                return;
                }
            if( idx==n || target<0)return;
        
   
           arr.push_back(candidates[idx]);
           f( candidates,target-candidates[idx],idx , arr);
           arr.pop_back(); 
        
        f( candidates , target , idx+1 , arr);
    }
    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<int>arr;
        n= candidates.size();
        f( candidates , target , 0 , arr);
        
        
     return ans;   
    }
};
